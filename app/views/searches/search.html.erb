<!--books一覧 -->
<table class="table table-hover table-inverse">
　<% if @range == '2' %>
　<h3>Books search for "<%= @word %>"</h3>
  <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
     <% @book.each do |book| %>
     <tr>
      <td>
       <%= link_to(book.user) do %>
       <%= attachment_image_tag book.user,:profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
       <% end %>
      </td>
      <td>
       <%= link_to book.title, book_path(book.id) %>
      </td>
      <td><%= book.body %></td>
     </tr>
     <% end %>
  </tbody>

  <% else %>
  <h3>Users search for "<%= @word %>"</h3>
  <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
    <% @user.each do |user| %>
     <tr>
      <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
      <td><%= user.name%></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
     </tr>
    <% end %>
   </tbody>
   <% end %>
 </table>
